    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\build\\app.js",
            "args": [],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/build/**/*.json"
            ],
            "preLaunchTask": "build",
            "runtimeExecutable": "node",
            "runtimeArgs": [ "--nolazy" ],
            "env": {
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceRoot}",
            "console": "internalConsole",
            "sourceMaps": true,
            "stopOnEntry": false
        }
    ]
}